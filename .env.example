# =============================================================================
# Housing Price Prediction - Environment Configuration
# =============================================================================
# Copy this file to .env and customize values for your environment.

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_KEY=your-secret-api-key-here
API_TITLE=Housing Price Prediction API
API_VERSION=1.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
MODEL_DIR=models
MODEL_NAME=housing_model

# -----------------------------------------------------------------------------
# MLflow Configuration
# -----------------------------------------------------------------------------
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_MODEL_NAME=housing-price-model
MLFLOW_MODEL_ALIAS=production
MLFLOW_PORT=5000
MLFLOW_BUCKET_NAME=mlflow-artifacts

# -----------------------------------------------------------------------------
# PostgreSQL Configuration (MLflow metadata store)
# -----------------------------------------------------------------------------
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=mlflow123
POSTGRES_DB=mlflow
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# MinIO Configuration (S3-compatible artifact storage)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# S3 client configuration (for local development outside Docker)
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
METRICS_ENABLED=true

# -----------------------------------------------------------------------------
# Prometheus / Grafana (Docker Compose)
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
# Change in production
GRAFANA_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# ML Evaluation Thresholds (optional - have sensible defaults)
# -----------------------------------------------------------------------------
# OVERFITTING_R2_THRESHOLD=0.1
# OVERFITTING_RMSE_THRESHOLD=0.15
# ACCURACY_TOLERANCE=0.10

# -----------------------------------------------------------------------------
# API Limits
# -----------------------------------------------------------------------------
# BATCH_MAX_ITEMS=100

# -----------------------------------------------------------------------------
# Prediction Display
# -----------------------------------------------------------------------------
# CURRENCY_SYMBOL=$
# PRICE_MULTIPLIER=1000.0
